-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     OpenCog.Lojban.Lujvo
                     , OpenCog.Lojban.Selmaho
  build-depends:       base >= 4.7 && < 5
                     , megaparsec
                     , opencog-atomspace
                     , array
                     , containers
                     , bytestring
                     , cereal
  default-language:    Haskell2010

executable new-template-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , new-template
                     , opencog-atomspace
  default-language:    Haskell2010
